@page
@using Microsoft.AspNetCore.Components.Web
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div>
    <h1> Spice Status  </h1>
</div>


@{var badgeType1 = "";
    var badgeType2 = ""; }
<div class="card-columns">
    @foreach (var spice in Model.Spices)
    {
        <div class="card">
            <div class="card-body">
                @switch (spice.Category1)
                {
                    case "Herb":
                        badgeType1 = "badge-success";
                        break;
                    case "Savory":
                        badgeType1 = "badge-info";
                        break;
                    case "Warm":
                        badgeType1 = "badge-warning";
                        break;
                    case "Hot":
                        badgeType1 = "badge-danger";
                        break;
                    default:
                        badgeType1 = "";
                        break;

                }
                @switch (spice.Category2)
                {
                    case "Ground":
                        badgeType2 = "badge-light";
                        break;
                    case "Pod":
                        badgeType2 = "badge-dark";
                        break;
                    case "Blend":
                        badgeType2 = "badge-secondary";
                        break;
                    default:
                        badgeType2 = "";
                        break;

                }
                <h5 class="card-title">
                    @spice.Name <span class="badge @badgeType1"> @spice.Category1</span>
                    <span class="badge @badgeType2"> @spice.Category2</span>
                </h5>
                <div class="card-footer">
                    <small class="text-muted">
                        <button @onclick="(e => SelectProduct(product.Id))"
                                data-toggle="modal" data-target="#productModal" class="btn btn-primary">
                            More Info
                        </button>
                    </small>
                </div>
            </div>

        </div>
    }
</div>
